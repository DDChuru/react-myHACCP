// Firebase Storage Rules for myHACCPapp
// Configure these rules in Firebase Console > Storage > Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their company's files
    match /companies/{companyId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Specific rules for crew member photos
    match /companies/{companyId}/crewMembers/{crewMemberId}/photo.jpg {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
    
    // Specific rules for SCI document images
    match /companies/{companyId}/sci/{documentId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
  }
}